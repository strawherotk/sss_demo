<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="UserInfoForm"
			editable="false"
			layout="ResponsiveGridLayout"
			title="{i18n>formTitle}"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
			<f:content>
                <Label text="User ID" />
				<Text text="{/user_id}" />
                <Label text="User Name" />
				<Text text="{/user_name}" />
				<Label text="Family Name" />
				<Text text="{/family_name}" />
				<Label text="Given Name" />
				<Text text="{/given_name}" />
                <Label text="Email" />
				<Text text="{/email}" />
                <Label text="User Role" />
				<Text text="{/xs.system.attributes/xs.rolecollections}" />				
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>