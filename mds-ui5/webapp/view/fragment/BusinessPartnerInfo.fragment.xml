<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="BusinessPartnerInfoForm"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Business Partner Information From MDS Service"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false">
			<f:content>
                <Label text="ID" />
				<Text text="{/Id}" />
                <Label text="BusinessPartner" />
				<Text text="{/BusinessPartner}" />
				<Label text="FullName" />
				<Text text="{/FullName}" />
				<Label text="AuthorizationGroup" />
				<Text text="{/AuthorizationGroup}" />
                <Label text="BusinessPartnerGrouping" />
				<Text text="{/BusinessPartnerGrouping}" />                
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>